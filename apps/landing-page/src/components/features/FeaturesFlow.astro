---
import { cn } from "@/lib/utils";
---

<section id="features-flow" class="relative z-10 w-full bg-background" style="height: 300vh;">
  <!-- Sticky Container -->
  <div class="sticky top-0 h-screen w-full overflow-hidden flex flex-col items-center justify-center">
    
    <!-- Background Elements (optional, e.g. ambient glows) -->
    <div class="absolute inset-0 bg-background pointer-events-none"></div>

    <!-- MAIN STAGE -->
    <div class="feature-stage relative w-full max-w-7xl px-6 py-12 h-full flex items-center justify-center">
      
      <!-- FEATURE 1: EDITOR (The Creator) -->
      <div id="stage-editor" class="feature-panel absolute inset-0 flex items-center justify-center opacity-100">
        <div class="relative w-full max-w-4xl p-8 rounded-xl border border-white/10 bg-black/40 backdrop-blur-2xl shadow-[0_0_50px_rgba(0,0,0,0.5)] overflow-hidden">
            <!-- Glow effect -->
            <div class="absolute -top-32 -left-32 w-64 h-64 bg-primary/20 blur-[100px] rounded-full"></div>
            
            <!-- Simulated Editor UI -->
            <div class="relative z-10">
                <div class="flex items-center justify-between mb-8 border-b border-white/5 pb-4">
                    <div class="flex gap-2">
                        <div class="w-3 h-3 rounded-full bg-red-500/80"></div>
                        <div class="w-3 h-3 rounded-full bg-yellow-500/80"></div>
                        <div class="w-3 h-3 rounded-full bg-green-500/80"></div>
                    </div>
                    <div class="text-xs text-muted-foreground font-mono">new-thread.md</div>
                </div>
                <div class="space-y-4 font-mono text-sm">
                    <div class="flex gap-4">
                        <span class="text-muted-foreground/30 select-none">01</span>
                        <div class="h-6 w-3/4 bg-gradient-to-r from-primary/80 to-primary/20 rounded animate-pulse"></div>
                    </div>
                    <div class="flex gap-4">
                         <span class="text-muted-foreground/30 select-none">02</span>
                        <div class="h-4 w-full bg-muted/20 rounded"></div>
                    </div>
                     <div class="flex gap-4">
                         <span class="text-muted-foreground/30 select-none">03</span>
                        <div class="h-4 w-5/6 bg-muted/20 rounded"></div>
                    </div>
                     <div class="flex gap-4">
                         <span class="text-muted-foreground/30 select-none">04</span>
                         <div class="flex gap-2">
                            <div class="h-4 w-12 bg-blue-500/20 rounded"></div>
                            <div class="h-4 w-24 bg-purple-500/20 rounded"></div>
                         </div>
                    </div>
                </div>
                <div class="mt-8 flex justify-end">
                     <div class="h-10 w-32 bg-primary text-primary-foreground font-semibold rounded-full shadow-[0_0_20px_rgba(var(--primary),0.5)] flex items-center justify-center">
                        Generate
                     </div>
                </div>
            </div>
        </div>
        <div class="absolute bottom-24 left-0 right-0 text-center pointer-events-none">
            <h2 class="text-6xl font-black tracking-tighter bg-clip-text text-transparent bg-gradient-to-b from-white to-white/40 drop-shadow-2xl">
                Craft with Focus
            </h2>
        </div>
      </div>

      <!-- FEATURE 2: SCHEDULING (The Architect) -->
      <div id="stage-schedule" class="feature-panel absolute inset-0 flex items-center justify-center opacity-0 translate-y-[50px]">
          <!-- 3D Perspective Grid Container -->
          <div class="relative w-[800px] h-[600px] [perspective:1000px]">
              <div class="grid grid-cols-3 gap-6 w-full h-full transform rotate-x-12 opacity-80 scale-90">
                  <!-- Mock Calendar Cells -->
                  {Array.from({ length: 9 }).map((_, i) => (
                      <div class="rounded-xl border border-white/5 bg-white/5 backdrop-blur-md p-6 flex flex-col justify-between transition-all duration-500 group hover:border-primary/50">
                          <span class="text-muted-foreground text-sm opacity-50 font-mono">10:00 AM</span>
                           <!-- Abstract content lines -->
                          <div class="space-y-2 opacity-30">
                              <div class="h-1.5 w-full bg-white rounded-full"></div>
                              <div class="h-1.5 w-2/3 bg-white rounded-full"></div>
                          </div>
                      </div>
                  ))}
              </div>
               <!-- The "Card" that flies in -->
               <div id="schedule-card" class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-72 h-44 bg-[#0A0A0A] border border-white/10 shadow-[0_20px_50px_rgba(0,0,0,0.5)] rounded-2xl flex flex-col p-6 z-20">
                    <div class="flex items-center gap-3 mb-4">
                        <div class="w-8 h-8 rounded-full bg-primary/20 flex items-center justify-center text-primary">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="18" height="18" x="3" y="4" rx="2" ry="2"/><line x1="16" x2="16" y1="2" y2="6"/><line x1="8" x2="8" y1="2" y2="6"/><line x1="3" x2="21" y1="10" y2="10"/></svg>
                        </div>
                        <span class="text-white font-semibold tracking-tight">Scheduled</span>
                    </div>
                    <div class="space-y-2">
                        <div class="h-2 w-full bg-white/10 rounded-full"></div>
                        <div class="h-2 w-3/4 bg-white/10 rounded-full"></div>
                    </div>
                    <div class="mt-auto flex gap-2">
                        <div class="h-6 w-16 bg-green-500/20 text-green-500 text-[10px] font-mono flex items-center justify-center rounded-full uppercase tracking-wider">Active</div>
                    </div>
               </div>
          </div>
          <div class="absolute bottom-24 left-0 right-0 text-center pointer-events-none">
            <h2 class="text-6xl font-black tracking-tighter bg-clip-text text-transparent bg-gradient-to-b from-white to-white/40 drop-shadow-2xl">
                Schedule with Precision
            </h2>
        </div>
      </div>

      <!-- FEATURE 3: ANALYTICS (The Strategist) -->
      <div id="stage-analytics" class="feature-panel absolute inset-0 flex items-center justify-center opacity-0 scale-90">
         <div class="w-full max-w-5xl h-[500px] flex items-end justify-between px-12 pb-0 gap-6 border-b border-white/10 bg-gradient-to-t from-primary/5 via-transparent to-transparent">
             <!-- Bars -->
             {Array.from({ length: 8 }).map((_, i) => (
                 <div class="w-full h-full flex items-end relative group">
                    <!-- Tooltip hint -->
                    <div class="absolute -top-12 left-1/2 -translate-x-1/2 opacity-0 group-hover:opacity-100 transition-opacity bg-white/10 px-2 py-1 rounded text-xs text-white backdrop-blur-md">
                        {Math.floor(Math.random() * 5000 + 1000)}
                    </div>
                    <!-- The Bar -->
                    <div 
                        class="analytics-bar w-full rounded-t-lg bg-gradient-to-t from-primary/80 to-primary shadow-[0_0_30px_rgba(var(--primary),0.4)]" 
                        data-height={`${Math.random() * 60 + 20}%`}
                        style="height: 0%; opacity: 0;"
                    ></div>
                 </div>
             ))}
         </div>
          <div class="absolute bottom-24 left-0 right-0 text-center pointer-events-none">
            <h2 class="text-6xl font-black tracking-tighter bg-clip-text text-transparent bg-gradient-to-b from-white to-white/40 drop-shadow-2xl">
                Analyze with Depth
            </h2>
        </div>
      </div>

    </div>
  </div>
</section>

<script>
    import gsap from 'gsap';
    import { ScrollTrigger } from 'gsap/ScrollTrigger';

    gsap.registerPlugin(ScrollTrigger);

    const section = document.querySelector('#features-flow');
    
    if (section) {
        // Set initial state for analytics bars based on their data-height
        const bars = document.querySelectorAll('.analytics-bar');
        bars.forEach(bar => {
            // We want them to start at height 0
            bar.style.height = '0%';
        });

        const tl = gsap.timeline({
            scrollTrigger: {
                trigger: section,
                start: "top top",
                end: "+=300%", // 3 screens worth of scroll
                scrub: 1,
                pin: true,
                anticipatePin: 1
            }
        });

        // STAGE 1 -> STAGE 2
        // Fade out Editor
        tl.to("#stage-editor", { opacity: 0, scale: 0.9, y: -50, duration: 2 })
          // Fade in Schedule
          .to("#stage-schedule", { opacity: 1, y: 0, scale: 1, duration: 2 }, "<")
          // Animate the "Card" dropping in
          .fromTo("#schedule-card", 
                { y: -100, opacity: 0, rotationX: 45, scale: 0.8 }, 
                { y: "-50%", opacity: 1, rotationX: 0, scale: 1, duration: 3, ease: "power2.out" }, 
                "<+=1"
            )

        // STAGE 2 -> STAGE 3
        // Fade out Schedule
         .to("#stage-schedule", { opacity: 0, scale: 1.1, filter: "blur(10px)", duration: 2 })
         // Fade in Analytics
         .to("#stage-analytics", { opacity: 1, scale: 1, duration: 2 }, "<")
         // Grow the bars
         .to(".analytics-bar", { 
             height: (i, target) => target.dataset.height, 
             opacity: 1, 
             duration: 3, 
             stagger: 0.2, 
             ease: "power2.out" 
         }, "<+=0.5");
    }
</script>
