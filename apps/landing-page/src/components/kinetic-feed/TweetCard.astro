---
/**
 * TweetCard - Individual scheduled tweet card
 * Uses shadcn Card styling with glassmorphic effect
 */
import { cn } from "@repo/ui/lib/utils";

interface Props {
    user: string;
    avatar: string;
    time: string;
    text: string;
    likes: number;
    retweets: number;
    index: number;
    class?: string;
}

const {
    user,
    avatar,
    time,
    text,
    likes,
    retweets,
    index,
    class: className,
} = Astro.props;
---

<div
    class={cn(
        "tweet-card group relative overflow-hidden",
        "rounded-xl border border-border bg-card/80 backdrop-blur-md",
        "p-4 shadow-md transition-all duration-300",
        "hover:shadow-lg hover:border-primary/30",
        "opacity-0 translate-y-8 scale-95",
        className,
    )}
    data-tweet-index={index}
>
    <!-- Scheduled indicator glow -->
    <div
        class="absolute top-0 right-0 h-16 w-16 bg-gradient-to-bl from-primary/20 to-transparent rounded-bl-full opacity-0 group-hover:opacity-100 transition-opacity"
    >
    </div>

    <!-- Header: Avatar + User + Time -->
    <div class="flex items-center gap-3 mb-3">
        <!-- Avatar (shadcn style) -->
        <div
            class="relative h-10 w-10 shrink-0 overflow-hidden rounded-full bg-primary/10 ring-2 ring-primary/20 flex items-center justify-center"
        >
            <span class="text-sm font-bold text-primary">{avatar}</span>
        </div>

        <div class="flex flex-col flex-1 min-w-0">
            <span class="text-sm font-semibold text-foreground truncate"
                >{user}</span
            >
            <div
                class="flex items-center gap-1.5 text-xs text-muted-foreground"
            >
                <svg
                    class="h-3 w-3"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                >
                    <circle cx="12" cy="12" r="10"></circle>
                    <polyline points="12 6 12 12 16 14"></polyline>
                </svg>
                <span class="scheduled-time">{time}</span>
            </div>
        </div>

        <!-- Scheduled badge -->
        <div
            class="flex items-center gap-1 px-2 py-0.5 rounded-full bg-green-500/10 text-green-600 dark:text-green-400 text-[10px] font-medium uppercase tracking-wider"
        >
            <svg
                class="h-3 w-3"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2.5"
            >
                <polyline points="20 6 9 17 4 12"></polyline>
            </svg>
            <span class="hidden sm:inline">Scheduled</span>
        </div>
    </div>

    <!-- Tweet content -->
    <p class="text-sm leading-relaxed text-foreground/90 mb-3">
        {text}
    </p>

    <!-- Stats footer (shadcn muted style) -->
    <div class="flex items-center gap-4 pt-2 border-t border-border/50">
        <span
            class="flex items-center gap-1.5 text-xs text-muted-foreground hover:text-primary transition-colors cursor-default"
        >
            <svg
                class="h-3.5 w-3.5"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
            >
                <path
                    d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"
                ></path>
            </svg>
            <span class="stat-likes">{likes.toLocaleString()}</span>
        </span>
        <span
            class="flex items-center gap-1.5 text-xs text-muted-foreground hover:text-primary transition-colors cursor-default"
        >
            <svg
                class="h-3.5 w-3.5"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
            >
                <path d="M17 1l4 4-4 4"></path>
                <path d="M3 11V9a4 4 0 0 1 4-4h14"></path>
                <path d="M7 23l-4-4 4-4"></path>
                <path d="M21 13v2a4 4 0 0 1-4 4H3"></path>
            </svg>
            <span class="stat-retweets">{retweets.toLocaleString()}</span>
        </span>
    </div>
</div>

<style>
    .tweet-card {
        will-change: transform, opacity;
    }

    .tweet-card.visible {
        opacity: 1;
        transform: translateY(0) scale(1);
    }
</style>
